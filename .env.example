# CommonHall Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Connection string format for .NET
# DATABASE_URL=Host=localhost;Database=commonhall;Username=postgres;Password=your-password

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=localhost:6379
# REDIS_PASSWORD=optional-redis-password

# =============================================================================
# Elasticsearch
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate a secure random string of at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ISSUER=commonhall
JWT_AUDIENCE=commonhall

# Token expiration (in minutes)
JWT_ACCESS_TOKEN_EXPIRATION=60
JWT_REFRESH_TOKEN_EXPIRATION=10080  # 7 days

# =============================================================================
# AI Services
# =============================================================================
# Anthropic Claude API key for AI features
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: Azure OpenAI (alternative to Anthropic)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# =============================================================================
# Email Service
# =============================================================================
# Provider: SMTP or SendGrid
EMAIL_PROVIDER=SMTP

# SMTP Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_SSL=false

# SendGrid Configuration (for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Default sender
EMAIL_FROM_ADDRESS=noreply@commonhall.local
EMAIL_FROM_NAME=CommonHall

# =============================================================================
# SMS Service (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# =============================================================================
# File Storage
# =============================================================================
# Provider: Local or Azure
STORAGE_PROVIDER=Local
STORAGE_LOCAL_PATH=./storage

# Azure Blob Storage (for production)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=commonhall

# =============================================================================
# Application URLs
# =============================================================================
# Frontend URL (used for email links, etc.)
APP_URL=http://localhost:3000

# API URL (used by frontend to make API calls)
API_URL=http://localhost:5000

# =============================================================================
# Docker Registry (for production deployments)
# =============================================================================
REGISTRY=ghcr.io/your-org
VERSION=latest

# =============================================================================
# Logging
# =============================================================================
# Log level: Verbose, Debug, Information, Warning, Error, Fatal
LOG_LEVEL=Information

# Optional: Seq logging server
# SEQ_URL=http://localhost:5341
# SEQ_API_KEY=your-seq-api-key

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
FEATURE_AI_ENABLED=true
FEATURE_SMS_ENABLED=true
FEATURE_PUSH_NOTIFICATIONS_ENABLED=true

# =============================================================================
# Development Only
# =============================================================================
# Set to true to seed database with demo data
SEED_DATABASE=false

# Set to true to enable Swagger in production (not recommended)
ENABLE_SWAGGER_IN_PRODUCTION=false
